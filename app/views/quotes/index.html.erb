<%= turbo_stream_from [current_company, 'quotes'] %>
<main class="container">
  <%= turbo_frame_tag "first_turbo_frame" do %>
    <div class="header">
      <h1>Quotes</h1>
      <%= link_to 'New quote', 
                  new_quote_path,
                  class: 'btn btn--primary',
                  data: {turbo_frame: 'new_quote'} %>
    </div>
  <% end %>
  <%= turbo_frame_tag 'new_quote' %>
  <%= turbo_frame_tag 'quotes' do %>
    <%= render @quotes %>
  <% end %>
</main>
