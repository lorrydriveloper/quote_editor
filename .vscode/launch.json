  "version": "0.2.0",
  "configurations": [
    {
      "type": "rdbg",
      "name": "Run and Debug",
      "request": "attach",
      "rdbgPath": "${workspaceFolder}/bin/rdbg",
      "debugPort": "${workspaceFolder}/tmp/sockets/ruby-debug",
      "localfs": true,
      "preLaunchTask": "Run Debug Dev",
      "postDebugTask": "Debug socket clear"
    },
    {
      "type": "rdbg",
      "name": "Attach Debug",
      "request": "attach",
      "rdbgPath": "${workspaceFolder}/bin/rdbg",
      "debugPort": "${workspaceFolder}/tmp/sockets/ruby-debug",
      "localfs": true,
      "postDebugTask": "Debug socket clear"
    }
  ]
}